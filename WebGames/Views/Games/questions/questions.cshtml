    <script>

        var clearClasses = function () {
            setTimeout(function () {
                $('.answer').removeClass('wrong').removeClass('correct');
                $('#quiz').removeClass('blocked');
            }, 500);
        }
        $(document).ready(function () {
            var QuestionIndex = 0;

            $('.lock').hover(function () {
                $(this).glow({ radius: "8", color: "#fffb3d" });
            }, function () {
                $(this).glow({ disable: true });
            });
            $('#attempts span').html(tries);

            $('body').on('click', '.lock', function (event) {

                if (tries > 0) {
                    $(this).addClass('clicked');
                }
                if (tries >= 1) {
                    tries--;
                    $('#attempts span').html(tries);
                    if (tries == 1) {
                        $('#s1').html('άλλη');
                        $('#s2').html('ερώτηση');
                    }
                    $('#quiz').fadeIn(500);
                    event.preventDefault();

                    //if (QuestionIndex == questions.length) {
                    //    // no more questions
                    //    alert('Δεν έχεις άλλες ερωτήσεις');
                    //    return;
                    //}

                    var randomQ = questions[QuestionIndex];
                    $('#question').html(randomQ['question']);
                    $('#question').data('qId', randomQ['id'] );
                    $('#a1').html(randomQ['answer1']);
                    $('#a2').html(randomQ['answer2']);
                    $('#a3').html(randomQ['answer3']);
                    $('#a4').html(randomQ['answer4']);
                    correctAnswer = randomQ['correct'];

                    QuestionIndex++;
                } else {
                    return;
                }
            });
            $('body').on('click', '.answer', function (event) {
                event.preventDefault();
                $('#quiz').addClass('blocked');

                function HandleQuestions(isCorrect) {
                    if (isCorrect) {
                        $(this).addClass('correct');
                        correct.play();
                        if (tries == 0) {
                            setTimeout(function () {
                                $('#quiz').fadeOut(500);
                                clearClasses();
                                $('#success').show(500);
                                //done message
                            }, 1500);
                        } else {
                            setTimeout(function () {
                                $('#quiz').fadeOut(500);
                                clearClasses();
                            }, 1500);
                        }
                    } else {
                        wrong.play();
                        $(this).addClass('wrong');
                        if (tries == 0) {
                            setTimeout(function () {
                                $('#quiz').fadeOut(500);
                                clearClasses();
                                $('#success').show(500);
                                //done message
                            }, 1500);
                        } else {
                            setTimeout(function () {
                                $('#quiz').fadeOut(500);
                                clearClasses();
                            }, 1500);
                        }
                    }
                }



                var qId = $('#question').data('qId');
                var answer = $(this).data('answer');

                if (isDemo) {
                    var isCorrect = $(this).data('answer') == correctAnswer;
                    HandleQuestions(isCorrect);
                }
                else {
                    $.custom.Server.CheckQuestion(qId, answer,
                        function (res) { // success
                            if (res && res.success) { // to time einai remaining seconds
                                HandleQuestions(res.isCorrect);
                            }
                            else { // fail

                            }
                        }, function () { // fail

                        });
                }
                
            });
        });
    </script>
