    <script>
            // Init
        window.unlockCode = atob('@(WebGames.Helpers.Base64Helper.GetBase64("419"))');

        var RemainingTime = @Model.RemainingTime;
        var GameScore = @Model.GameScore;
        @if(Model.IsDemo) {
            @:var isDemo = true;
        }
        else {
            @:var isDemo = false;
        }
    </script>

    <script src="/Content/Games/js/cell.init.js"></script>
</div>
