
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Cosmoplay.gr</title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/DashBoard/css/custom.min.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/animate.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/Dashboard/Login" class="form-horizontal" method="post" role="form">

                        @Html.AntiForgeryToken()


                        <h1>Σύνδεση Διαχειριστή</h1>
                        <div>
                            <input type="text" class="form-control"  id="UserName" name="UserName" placeholder="Username" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control"  id="Password" name="Password" placeholder="Password" required="" />
                        </div>
                        <div>
                            <button class="btn btn-default" type="submit">Σύνδεση</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1>Cosmoplay.gr | Admin</h1>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>