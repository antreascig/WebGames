@model WebGames.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="@Url.Content("~/Scripts/custom/views/register.js")"></script>
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @* UserName *@
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    @* Password *@
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    @* Confirm Password *@
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    @* FullName *@
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
    </div>

    @* Email *@
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", data_bind = "value:Email" })
        </div>
    </div>

    @* Shop *@
    <div class="form-group">
        @Html.LabelFor(m => m.Shop, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Shop, new { @class = "form-control" })
        </div>
    </div>

    @* MaritalStatus *@
    <div class="form-group">
        @Html.LabelFor(m => m.MaritalStatus, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MaritalStatus, new { @class = "form-control" })
        </div>
    </div>

    @* Hobby *@
    <div class="form-group">
        @Html.LabelFor(m => m.Hobby, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Hobby, new { @class = "form-control" })
        </div>
    </div>

    @* Avatar *@
    <div class="form-group">
        @Html.LabelFor(m => m.Avatar, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="row">

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <label class="avatar">
                        <input name="Avatar" class="form-control" id="Avatar" type="radio" checked="checked" value="avatar1">
                        <img src="avatar1" alt="avatar1" />
                    </label>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <label class="avatar">
                        <input name="Avatar" class="form-control" id="Avatar" type="radio" value="avatar2">
                        <img src="avatar2" alt="avatar2" />
                    </label>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <label class="avatar">
                        <input name="Avatar" class="form-control" id="Avatar" type="radio" value="avatar3">
                        <img src="avatar3" alt="avatar3" />
                    </label>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <label class="avatar">
                        <input name="Avatar" class="form-control" id="Avatar" type="radio" value="avatar4">
                        <img src="avatar4" alt="avatar4" />
                    </label>
                </div>

            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}
