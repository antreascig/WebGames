	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
	<link rel="stylesheet" href="~/Content/ComingSoon/screens.css">
    <link rel="icon" href="~/Content/ComingSoon/images/favicon.png" type="image/x-icon"/>
</head>
<body>

    <script>
        window.location = "https://www.cosmoplay.gr/Home";
    </script>
	<div class="wrapper">
		<div class="screen">
			<img src="~/Content/ComingSoon/images/teaser_main.png">
			<div class="logo1"><a href="#"><img src="~/Content/ComingSoon/images/teaser_cosmote_logo.png" alt=""></a></div>
