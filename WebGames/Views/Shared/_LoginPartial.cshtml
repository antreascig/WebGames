@using Microsoft.AspNet.Identity
@using WebGames.Helpers

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("logoff", "account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Γειά σου " + User.Identity.GetUserName() + "!", "index", "user", routeValues: null, htmlAttributes: new { title = "User" })
            </li>
            <li>
                <img src="@( "/Content/" +User.Identity.GetAvatar() + ".png")" />
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Αποσύνδεση</a></li>
        </ul>
    }
}
